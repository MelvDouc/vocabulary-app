{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "module": "Node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "$global/*": [
        "./global/*"
      ],
      "$server/*": [
        "./server/src/*"
      ],
      "$client/*": [
        "./client/ts/*"
      ]
    }
  }
}